<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.1;net461</TargetFrameworks>
    <StartupObject>Semver.Benchmarks.Program</StartupObject>
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'netcoreapp2.1' ">
        <DefineConstants>$(DefineConstants);NETSTANDARD</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'net461' ">
        <DefineConstants>$(DefineConstants);NET461</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="BenchmarkDotNet">
        <Version>0.13.0</Version>
      </PackageReference>
      <PackageReference Include="semver" Version="2.0.6" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Semver.Test\Semver.Test.csproj" />
      <ProjectReference Include="..\Semver\Semver.csproj">
        <Aliases>current</Aliases>
      </ProjectReference>
    </ItemGroup>
</Project>
